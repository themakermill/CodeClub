        <TextBlock x:Name="weatherText" HorizontalAlignment="Left" Margin="460,489,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="422" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
